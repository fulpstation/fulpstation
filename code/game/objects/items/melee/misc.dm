	SIGNAL_HANDLER

	extended = active
	inhand_icon_state = active ? "nullrod" : null
	balloon_alert(user, "[active ? "extended" : "collapsed"] [src]")
	playsound(user ? user : src, 'sound/weapons/batonextend.ogg', 50, TRUE)
